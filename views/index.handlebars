<h1>Nom, Nom Burgers!</h1>
<div class="container">
  <div class="burger-list">
    <div class="not-devoured">
      <h2>Burgers that have not been DEVOURED:</h2>
      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <h2>Burgers that have been DEVOURED:</h2>

    <div class="devoured-burgers">
      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>


  <h2>Add a burger:</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="name">
    </div>

    <button type="submit" class="form-button">Add Burger</button>
  </form>
</div>
